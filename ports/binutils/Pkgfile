# Description: linker, assembler and other development tools

name=binutils
version=2.31.1
release=mix-1
source=(ftp://ftp.gnu.org/gnu/binutils/binutils-$version.tar.bz2)

build() {
  cd $name-$version
  mkdir -v build
  cd build

  ../configure --prefix=/usr \
    --enable-gold \
    --enable-ld=default \
    --enable-plugins \
    --enable-shared \
    --disable-nls \
    --disable-werror \
    --enable-64-bit-bfd \
    --with-system-zlib
  make tooldir=/usr
  $TST make -k check || true
  make tooldir=/usr DESTDIR=$PKG install
  rm -rv $PKG/usr/share/info
}
