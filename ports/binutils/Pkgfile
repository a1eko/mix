# Description: linker, assembler and other development tools
name=binutils
version=2.40
release=mix-1
source=(https://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz
)

build() {
  cd $name-$version

  mkdir -v build
  cd build

  ../configure --prefix=/usr \
    --sysconfdir=/etc \
    --enable-gold \
    --enable-ld=default \
    --enable-plugins \
    --enable-shared \
    --disable-werror \
    --enable-64-bit-bfd \
    --with-system-zlib
  make tooldir=/usr
  $TST make -k check || true
  make tooldir=/usr DESTDIR=$PKG install -j1
  rm -fv $PKG/usr/lib/lib{bfd,ctf,ctf-nobfd,sframe,opcodes}.a
  rm -fv $PKG/usr/share/man/man1/gprofng.1
  rm -rv $PKG/usr/share/info
}
