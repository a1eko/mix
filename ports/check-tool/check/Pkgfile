# Description: unit testing framework for C

name=check
version=0.9.14
release=0
source=(http://sourceforge.net/projects/check/files/check/$version/check-$version.tar.gz)

build() {
  cd $name-$version
  PKG_CONFIG= \
  ./configure --prefix=/tools
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/tools/share/{info,doc}
}
