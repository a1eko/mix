# Description: lightweight system monitor
# Depends on:  cmake curl imlib2 lua ncurses wireless_tools xorg-libxdamage xorg-libxft xorg-libxinerama

name=conky
version=1.11.5
release=mix-1
source=("https://github.com/brndnmtthws/conky/archive/v${version}.tar.gz")

build() {
  cd $name-$version
  cmake . \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release \
    -D MAINTAINER_MODE=ON \
    -D BUILD_WLAN=ON \
    -D BUILD_CURL=ON
  make
  make DESTDIR=$PKG install
  rm -rf $PKG/usr/share
}
