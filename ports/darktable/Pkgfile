# Description: Open source photography workflow application
# URL:         https://www.darktable.org/
# Maintainer:  Aaron Ball, nullspoon at oper dot io
# Depends on:  libgphoto2 cmake isl libxslt json-c libpng libtiff librsvg rawspeed lensfun
name=darktable
version=3.2.1
release=1
source=(https://github.com/darktable-org/${name}/releases/download/release-${version}/${name}-${version}.tar.xz)

build() {
  cd ${name}-${version}
  mkdir build && cd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DUSE_COLORD=false \
    -DUSE_LIBSECRET=false \
    -DUSE_KWALLET=false \
    -DUSE_FLICKR=false \
    -DUSE_OPENEXR=false \
    -DUSE_NLS=false \
    -DBUILD_USERMANUAL=false \
    -DUSE_LENSFUN=true \
    -DBUILD_CURVE_TOOLS=ON \
    -DBUILD_NOISE_TOOLS=ON \
    -DRAWSPEED_ENABLE_LTO=ON \
    ..
  make -j$(nproc)
  make DESTDIR=${PKG} install

  rm -r ${PKG}/usr/share/doc
}
