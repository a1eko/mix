# Description: photography workflow application
# Depends on: openmp gtk3 sqlite3 pango librsvg libxml2 libpng libjpeg-turbo libtiff lcms2 json-glib exiv2 pugixml curl glib isl
# Optional: llvm clang libsoup gphoto2 openexr lensfun icu lua cups xorg libwebp openjpeg2 iso-codes libsecret graphicsmagick gmic 

name=darktable
version=3.8.0
release=mix-1
source=(https://github.com/darktable-org/${name}/releases/download/release-${version}/${name}-${version}.tar.xz)

build() {
  cd ${name}-${version}

  mkdir build
  cd build

  cmake .. \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DUSE_NLS=false
  make -j ${JOBS-1}
  make DESTDIR=$PKG install

  rm -rv $PKG/usr/share/doc
}
