# Description: photographic raw image manipulation tool
# Depends on: gtk3 cmake libxml2 pugixml libxslt json-glib libpng libjpeg-turbo libtiff librsvg sqlite3 exiv2 lensfun lcms2 curl
# Nice to have: libgphoto2 mesa3d openexr 

name=darktable
version=2.0.2
release=mix-1
source=(http://github.com/darktable-org/darktable/releases/download/release-$version/darktable-$version.tar.xz)
 
build() {
  cd $name-$version
  ./build.sh --prefix /usr --buildtype Release
  cd build
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{applications,doc,locale}
}
