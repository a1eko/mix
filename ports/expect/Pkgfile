# Description: programmed dialogue with interactive programs

name=expect
version=5.45.4
release=mix-1
source=(http://prdownloads.sourceforge.net/expect/expect$version.tar.gz)

build() {
  cd $name$version
  unset CONFIG_SITE
  ./configure --prefix=/usr \
    --enable-shared \
    --mandir=/usr/share/man \
    --with-tcl=/usr/lib \
    --with-tclinclude=/usr/include
  make
  make DESTDIR=$PKG install
  ln -svf expect$version/libexpect$version.so $PKG/usr/lib
  rm -rv $PKG/usr/share/man
}
