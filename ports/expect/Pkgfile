# Description: programmed dialogue with interactive programs

name=expect
version=5.45.4
release=mix-2
source=(https://prdownloads.sourceforge.net/expect/expect$version.tar.gz
	https://www.linuxfromscratch.org/patches/lfs/development/expect-$version-gcc14-1.patch)

build() {
  cd $name$version
  unset CONFIG_SITE

  patch -Np1 -i ../expect-$version-gcc14-1.patch

  ./configure --prefix=/usr \
    --enable-shared \
    --mandir=/usr/share/man \
    --with-tcl=/usr/lib \
    --with-tclinclude=/usr/include
  make
  make DESTDIR=$PKG install
  ln -svf expect$version/libexpect$version.so $PKG/usr/lib
  rm -rv $PKG/usr/share/man
}
