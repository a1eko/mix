# Description: A numerical library for C and C++ programmers.
# URL: http://www.gnu.org/software/gsl/

name=gsl
version=1.16
release=mix-1
source=(ftp://ftp.gnu.org/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \

	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/info
}
