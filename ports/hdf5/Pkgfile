# Description: management of extremely large and complex data collections
# URL: https://www.hdfgroup.org/downloads/hdf5/
# Maintainer: Daryl Fonseca-Holt, wyatt at prairieturtle dot ca
# Depends on: gcc-fortran

name=hdf5
version=1.12.0
release=mix-1
source=(https://support.hdfgroup.org/ftp/HDF5/releases/hdf5-1.12/hdf5-1.12.0/src/hdf5-1.12.0.tar.bz2)

build() {
	cd $name-$version
    ./configure \
        --prefix=/usr \
        --mandir=/usr/share/man \
        --enable-static \
        --disable-sharedlib-rpath \
        --enable-build-mode=production \
        --enable-hl \
        --enable-cxx \
        --enable-fortran \
        --with-pic \
        --with-zlib \
        --with-szlib
    make
    make DESTDIR=$PKG install
}
