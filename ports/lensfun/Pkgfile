# Description: database of photographic lenses
# Depends on: python, libpng, cmake

name=lensfun
version=0.3.2
release=mix-1
source=(http://sourceforge.net/projects/lensfun/files/$version/$name-$version.tar.gz
  lensfun-fix-python-install-dir.patch)

build() {
  cd $name-$version
  patch -p1 -i ../lensfun-fix-python-install-dir.patch
  cmake . \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib
  make
  make DESTDIR=$PKG install
}
