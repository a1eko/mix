# Description: PostScript rendering library
# Depends on: ghostscript

name=libspectre
version=0.2.7
release=mix-2
source=(http://libspectre.freedesktop.org/releases/libspectre-$version.tar.gz
	file:./libspectre-0.2.7-gs918-gentoo.patch
)
 
build() {
  cd $name-$version
  patch -Np1 -i ../libspectre-0.2.7-gs918-gentoo.patch 
  ./configure --prefix=/usr --disable-static
  make
  make DESTDIR=$PKG install
}
