# Description: data compression utility

name=lzip
version=1.17
release=mix-1
source=(http://download.savannah.gnu.org/releases/lzip/lzip-$version.tar.gz)

build() {
  cd $name-$version
  ./configure --prefix=/usr
  make
  $TST make -k check
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/info
}
