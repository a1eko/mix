# Description: MPI library implementation
# URL: http://www.mpich.org/

name=mpich
version=3.0.4
release=1
source=(http://www.mpich.org/static/tarballs/$version/mpich-$version.tar.gz)
 
build()
{
  cd $name-$version
  case $(uname -m) in
    x86_64) WITH_FPIC="CFLAGS=-fPIC CXXFLAGS=-fPIC" ;;
  esac
  ./configure --prefix=/usr --disable-f77 --disable-fc --enable-shared $WITH_FPIC
  make 
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{doc,man/man3}
}
