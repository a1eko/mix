# Description: basic network utilities

name=net-tools
version=CVS_20101030
release=mix-1
source=(ftp://anduin.linuxfromscratch.org/BLFS/net-tools/net-tools-$version.tar.gz
	http://linuxfromscratch.org/patches/downloads/net-tools/net-tools-$version-remove_dups-1.patch
)

build() {
  cd $name-$version
  patch -Np1 -i ../net-tools-$version-remove_dups-1.patch
  yes "" | make config
  make
  make BASEDIR=$PKG update
}
