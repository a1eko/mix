# Description: python interface to Neuron simulation environment
# Depends on: nrn python

name=nrnpython
version=hg
release=mix-1
source=()
 
build() {
  hg clone http://www.neuron.yale.edu/hg/neuron/nrn
  cd nrn
  ./build.sh
  ./configure --prefix=/usr --exec-prefix=/usr --with-iv=/usr --with-nrnpython
  cd src/nrnpython
  python setup.py install --prefix=$PKG/usr 
}
