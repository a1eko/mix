# Description: OpenBSD secure shell
# Depends on: openssl krb5

name=openssh
version=8.4p1
deb=3
release=gssapi-deb$deb-mix-1
source=(http://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-$version.tar.gz
        http://ftp.debian.org/debian/pool/main/o/openssh/openssh_$version-$deb.debian.tar.xz
	sshd)

build() {
  cd openssh-$version
  tar xvf ../openssh_$version-$deb.debian.tar.xz debian/patches/gssapi.patch
  patch -Np1 -i debian/patches/gssapi.patch

  autoreconf -fi
  ./configure --prefix=/usr \
    --libexecdir=/usr/lib/openssh \
    --sysconfdir=/etc/ssh \
    --with-md5-passwords \
    --with-privsep-path=/var/lib/sshd \
    --with-kerberos5=/usr \
    --with-xauth=/usr/bin/xauth
  make
  make DESTDIR=$PKG install

  echo "PermitRootLogin no" >> $PKG/etc/ssh/sshd_config
  install -D -m 755 -v ../sshd $PKG/etc/rc.d/sshd
  chown -v root:sys $PKG/var/lib/sshd
}
