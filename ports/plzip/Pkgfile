# Description: parallel version of lzip
# Depends on: lzlib

name=plzip
version=1.9
release=mix-1
source=(http://download.savannah.gnu.org/releases/lzip/$name/$name-$version.tar.gz)

build() {
  cd $name-$version
  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/info
}
