# Description: C++ functions matching the interface and behavior of python string methods with std::string

name=pystring
version=1.1.3.git1
_commit=281419de2f91f9e0f2df6acddfea3b06a43436be
source=(https://github.com/imageworks/pystring/archive/$_commit.tar.gz
        makefile.patch)

build() {
  cd $name-${_commit}
  patch -Np1 -i ../makefile.patch
  make
  make DESTDIR=$PKG install
}
