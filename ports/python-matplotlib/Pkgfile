# Description: python plotting library
# URL: http://matplotlib.org/
# Depends on: python numpy libpng freetype python-dateutil pyparsing six

name=python-matplotlib
version=1.4.3
release=1
source=(https://downloads.sourceforge.net/project/matplotlib/matplotlib/matplotlib-$version/matplotlib-$version.tar.gz)

build() {
  cd matplotlib-$version
  python setup.py build
  python setup.py install --root=$PKG
}
