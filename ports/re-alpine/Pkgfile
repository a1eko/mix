# Description: mail user agent and tools
# Depends on: openssl

name=re-alpine
version=2.02
release=1
source=(http://sourceforge.net/projects/re-alpine/files/re-alpine-$version.tar.bz2)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --without-ldap \
    --without-krb5 \
    --with-ssl-dir=/usr \
    --with-passfile=.pine-passfile
  make
  make DESTDIR=$PKG install
}
