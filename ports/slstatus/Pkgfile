# Description: status bar for dwm
# Depends on: xorg

name=slstatus
version=1.1
release=mix-1
source=(https://dl.suckless.org/tools/$name-$version.tar.gz)

build() {
  cd $name-$version
  [ -f $PKGMK_ROOT/config.h ] && cp -v $PKGMK_ROOT/config.h .
  make
  make DESTDIR=$PKG PREFIX=/usr MANPREFIX=/usr/man install
}
