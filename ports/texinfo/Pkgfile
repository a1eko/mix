# Description: programs for manipulating info pages

name=texinfo
version=6.6
release=mix-1
source=(ftp://ftp.gnu.org/gnu/texinfo/texinfo-$version.tar.gz)

build() {
  cd $name-$version
  ./configure --prefix=/usr --disable-nls --disable-static
  make
  $TST make -k check || true
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/info
}
