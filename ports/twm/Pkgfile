# Description: Tab Window Manager for the X Window System
# Depends on: xorg-libxmu xorg-util-macros xorg-server

name=twm
version=1.0.12
release=mix-1
source=(https://www.x.org/pub/individual/app/$name-$version.tar.xz)

build() {
  cd $name-$version
  sed -e '/^rcdir =/s,^\(rcdir = \).*,\1/usr/share/X11/app-defaults,' -i src/Makefile.in
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static
  make
  make DESTDIR=$PKG install
}
