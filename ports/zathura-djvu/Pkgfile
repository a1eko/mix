# Description: zathura DjVu viewer plugin
# Depends on: zathura girara djvulibre

name=zathura-djvu
version=0.2.8
release=mix-2
source=(https://github.com/pwmt/zathura-djvu/archive/$version.tar.gz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
