# Description: zathura DjVu viewer plugin
# Depends on: zathura girara djvulibre

name=zathura-djvu
version=0.2.8
release=mix-1
source=(http://pwmt.org/projects/$name/download/$name-$version.tar.xz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
