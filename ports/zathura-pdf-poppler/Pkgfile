# Description: zathura PDF viewer plugin
# Depends on: gtk3 girara zathura poppler-glib

name=zathura-pdf-poppler
version=0.2.8
release=mix-1
source=(http://pwmt.org/projects/$name/download/$name-$version.tar.gz)

build() {
  cd $name-$version
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{applications,metainfo}
  rmdir -v $PKG/usr/share
}
