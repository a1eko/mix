# Description: zathura PostScript viewer plugin
# Depends on: zathura girara libspectre

name=zathura-ps
version=0.2.6
release=mix-2

source=(https://github.com/pwmt/zathura-ps/archive/$version.tar.gz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
