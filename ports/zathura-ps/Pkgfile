# Description: zathura PostScript viewer plugin
# Depends on: zathura girara libspectre

name=zathura-ps
version=0.2.6
release=mix-1

source=(http://pwmt.org/projects/$name/download/$name-$version.tar.xz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
