# Description: document viewer
# Depends on: gtk3 girara sqlite3 intltool meson ninja

name=zathura
version=0.4.1
release=mix-1
source=(http://pwmt.org/projects/zathura/download/zathura-$version.tar.xz)
 
build() {
  cd $name-$version
  sed -i "/subdir('doc')/d" meson.build
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
