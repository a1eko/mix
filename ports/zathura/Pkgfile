# Description: document viewer
# Depends on: gtk3 girara sqlite3 intltool meson ninja

name=zathura
version=0.5.1
release=mix-1
source=(https://pwmt.org/projects/$name/download/$name-$version.tar.xz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share
}
