# Description: document viewer
# Depends on: gtk3 girara sqlite3 intltool meson ninja

name=zathura
version=0.4.3
release=mix-2
source=(https://github.com/pwmt/zathura/archive/$version.tar.gz)
 
build() {
  cd $name-$version
  meson build --prefix=/usr
  DESTDIR=$PKG ninja -C build install
  rm -rv $PKG/usr/share/locale
}
