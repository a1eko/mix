# Description: linker, assembler and other development tools

name=binutils
version=2.38
release=0pass1
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz)

build() {
  cd $name-$version

  mkdir -v build
  cd build

  ../configure --prefix=/tools \
    --with-sysroot=$MIX \
    --target=$MIX_TGT \
    --disable-nls \
    --disable-werror
  make
  make DESTDIR=$PKG install -j1
  rm -rv $PKG/tools/share/{info,man}
}
