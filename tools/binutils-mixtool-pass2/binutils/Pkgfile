# Description: linker, assembler and other development tools

name=binutils
version=2.37
release=0pass2
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz)

build() {
  cd $name-$version

  mkdir -v build
  cd build

  ../configure --prefix=/usr \
    --build=$(../config.guess) \
    --host=$MIX_TGT \
    --disable-nls \
    --enable-shared \
    --disable-werror \
    --enable-64-bit-bfd
  make
  make DESTDIR=$PKG install -j1

  # prevent libctf.so from linking against zlib from the host distribution
  install -vm755 libctf/.libs/libctf.so.0.0.0 $PKG/usr/lib

  rm -rv $PKG/usr/share/{info,man}
}
