# Description: parser generator

name=bison
version=3.5
release=0
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --prefix=/tools
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/tools/share/{doc,info,man}
  rm -v  $PKG/tools/share/bison/README.md
}
