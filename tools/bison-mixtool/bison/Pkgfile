# Description: parser generator

name=bison
version=3.7.1
release=0
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --prefix=/usr --disable-nls
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{doc,info,man}
  find $PKG -name "README*" -delete
}
