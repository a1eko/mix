# Description: compiler collection

name=gcc
version=9.1.0
release=0libstdcxx
source=(http://ftp.gnu.org/gnu/gcc/gcc-$version/gcc-$version.tar.xz)

: ${MIX_TGT:=$(uname -m)-mix-linux-gnu}

build() {
  cd $name-$version
  mkdir -v build
  cd build

  ../libstdc++-v3/configure --prefix=/tools \
    --host=$MIX_TGT \
    --disable-multilib \
    --disable-nls \
    --disable-libstdcxx-threads \
    --disable-libstdcxx-pch \
    --with-gxx-include-dir=/tools/$MIX_TGT/include/c++/$version
  make
  make DESTDIR=$PKG install
}
