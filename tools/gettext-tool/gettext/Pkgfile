# Description: internatinalization and localization utilities

name=gettext
version=0.20.1
release=0
source=(http://ftp.gnu.org/gnu/gettext/gettext-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --disable-shared
  make
  mkdir -pv $PKG/tools/bin
  cp -v gettext-tools/src/{msgfmt,msgmerge,xgettext} $PKG/tools/bin/
}
