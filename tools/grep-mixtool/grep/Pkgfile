# Description: programs for searching through files

name=grep
version=3.6
release=0
source=(http://ftp.gnu.org/gnu/grep/grep-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
            --host=$MIX_TGT #\
            #--bindir=/bin  # crux compat
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{info,man}
}
