# Description: ZIP compression utility

name=gzip
version=1.9
release=0
source=(ftp://ftp.gnu.org/gnu/gzip/gzip-$version.tar.xz)

build() {
  cd $name-$version

  # fixes for glibc 2.28
  sed -i 's/IO_ftrylockfile/IO_EOF_SEEN/' lib/*.c
  echo "#define _IO_IN_BACKUP 0x100" >> lib/stdio-impl.h

  ./configure --prefix=/tools
  make
  make prefix=$PKG/tools install
  rm -rv $PKG/tools/share/{info,man}
}
