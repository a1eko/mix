# Description: linux kernel headers

name=linux-headers
version=6.12.45
release=0
source=(https://www.kernel.org/pub/linux/kernel/v6.x/linux-$version.tar.xz)

build() {
  cd linux-$version
  make mrproper
  make headers
  find usr/include -name '.*' -delete
  rm -v usr/include/Makefile
  mkdir -pv $PKG/usr
  cp -rv usr/include $PKG/usr/
}
