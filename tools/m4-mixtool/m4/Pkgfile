# Description: macro processor

name=m4
version=1.4.20
release=0
source=(https://ftpmirror.gnu.org/gnu/m4/m4-$version.tar.xz)

build() {
  cd $name-$version

  ./configure --prefix=/usr \
    --host=$MIX_TGT \
    --build=$(build-aux/config.guess)
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{info,man}
}
