# Description: state-dependent file processing

name=make
version=4.2.1
release=0
source=(http://ftp.gnu.org/gnu/make/make-$version.tar.bz2)

build() {
  cd $name-$version

  # fix error caused by glibc 2.27
  sed -i '211,217 d; 219,229 d; 232 d' glob/glob.c

  ./configure --prefix=/tools --without-guile
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/tools/share/{info,man}
}
