# Description: libraries for handling of character screens

name=ncurses
version=6.1
release=0
source=(http://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz)

build() {
  cd $name-$version

  # ensure gawk is found
  sed -i s/mawk// configure

  ./configure --prefix=/tools \
    --with-install-prefix=$PKG \
    --with-shared \
    --without-debug \
    --without-ada \
    --enable-widec \
    --enable-overwrite
  make
  make install
  ln -sv libncursesw.so $PKG/tools/lib/libncurses.so
  rm -rv $PKG/tools/share/man
}
