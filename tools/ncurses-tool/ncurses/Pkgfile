# Description: libraries for handling of character screens

name=ncurses
version=5.9
release=0
source=(ftp://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz
	http://www.linuxfromscratch.org/patches/downloads/ncurses/ncurses-$version-gcc5_buildfixes-1.patch
)

build() {
  cd $name-$version
  patch -Np1 -i ../ncurses-$version-gcc5_buildfixes-1.patch
  ./configure --prefix=/tools \
    --with-install-prefix=$PKG \
    --with-shared \
    --without-debug \
    --without-ada \
    --enable-widec \
    --enable-overwrite
  make
  make install
  rm -rv $PKG/tools/man
}
