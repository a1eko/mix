# Description: stream editor

name=sed
version=4.9
release=0
source=(http://ftp.gnu.org/gnu/sed/sed-$version.tar.xz)

build() {
  cd $name-$version
  # crux compat
  ./configure --prefix=/usr \
    --exec-prefix=/ \
    --host=$MIX_TGT
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{info,man}
}
