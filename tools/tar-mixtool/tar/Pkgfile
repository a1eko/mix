# Description: archiving program

name=tar
version=1.34
release=0
source=(http://ftp.gnu.org/gnu/tar/tar-$version.tar.xz)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --host=$MIX_TGT \
    --build=$(build-aux/config.guess)
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/usr/share/{info,man}
  rmdir $PKG/usr/share
}
