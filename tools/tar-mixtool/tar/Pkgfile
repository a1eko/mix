# Description: archiving program

name=tar
version=1.34
release=0
source=(http://ftp.gnu.org/gnu/tar/tar-$version.tar.xz)

build() {
  cd $name-$version
  # crux compat
  ./configure --prefix= \
    --libexec=/usr/lib/tar \
    --host=$MIX_TGT \
    --build=$(build-aux/config.guess)
  make
  make DESTDIR=$PKG install
  rm -rv $PKG/share/{info,man}
}
