# Description: data compression utilities

name=xz
version=5.6.3
release=0
source=(https://github.com//tukaani-project/xz/releases/download/v$version/xz-$version.tar.xz)


build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --host=$MIX_TGT \
    --build=$(build-aux/config.guess) \
    --disable-static
  make
  make DESTDIR=$PKG install
  rm -v $PKG/usr/lib/liblzma.la
  rm -rv $PKG/usr/share/{doc,man}
}
