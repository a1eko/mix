# Description: job scheduling daemon

name=dcron
version=4.5
release=mix-3
source=(http://www.jimpryor.net/linux/releases/dcron-$version.tar.gz
	crond crontab runjobs)

build() {
  cd $name-$version
  make PREFIX=/usr
  make DESTDIR=$PKG CRONTAB_GROUP=users install
  install -v -m 600 ../crontab $PKG/var/spool/cron/crontabs/root
  ln -sv ../var/spool/cron/crontabs/root $PKG/etc/crontab
  install -v -D -m 755 ../crond $PKG/etc/init.d/crond
  install -v -D -m 755 ../runjobs $PKG/usr/sbin/runjobs
  install -v -d $PKG/etc/cron/{hourly,daily,weekly,monthly}

  mv -v $PKG/var/spool/cron/crontabs/root{,.new}
}
