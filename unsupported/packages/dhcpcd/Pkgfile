# Description: DHCP client

name=dhcpcd
version=6.6.7
release=mix-1
source=(http://roy.marples.name/downloads/dhcpcd/dhcpcd-$version.tar.bz2)

build() {
  cd $name-$version
  ./configure --prefix= \
    --libexecdir=/lib/dhcpcd \
    --dbdir=/var/lib/dhcpcd \
    --sysconfdir=/etc/dhcpcd \
    --os=linux \
    --with-hooks=none
  make
  make DESTDIR=$PKG install
  chmod -R u+w $PKG
}
