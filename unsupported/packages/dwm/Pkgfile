# Description: X window manager
# Depends:     xorg dmenu xorg-libxinerama

name=dwm
version=6.0
revision=mix-3
source=(http://dl.suckless.org/dwm/dwm-$version.tar.gz)
 
build() {
  cd $name-$version
  sed -i "s|^PREFIX =.*|PREFIX = /usr|" config.mk
  sed -i "s|^X11INC =.*|X11INC = /usr/include/X11|" config.mk
  sed -i "s|^X11LIB =.*|X11LIB = /usr/lib/X11|" config.mk
  sed -i "s|1 << 8|0|" config.def.h
  cp -v config.def.h config.h
  make
  make DESTDIR=$PKG install
}
