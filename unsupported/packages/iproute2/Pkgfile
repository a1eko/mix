# Description: basic network utilities

name=iproute2
version=3.18.0
release=mix-1
source=(ftp://ftp.kernel.org/pub/linux/utils/net/iproute2/iproute2-$version.tar.xz)

build() {
  cd $name-$version
  sed -i '/^TARGETS/s@arpd@@g' misc/Makefile
  sed -i /ARPD/d Makefile
  sed -i 's/arpd.8//' man/man8/Makefile
  make DESTDIR=
  make DESTDIR=$PKG MANDIR=/usr/share/man install
  rm -rv $PKG/usr/share/doc
}
