# Description: packet filter control tool

name=iptables
version=1.4.21
release=mix-1
source=(ftp://ftp.netfilter.org/pub/iptables/iptables-$version.tar.bz2 iptables)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --libexecdir=/usr/lib --enable-libipq --enable-devel
  make
  make DESTDIR=$PKG install

  install -v -m 700 -D ../iptables $PKG/etc/init.d/iptables
  rm -rv $PKG/usr/share/man/man3

  mv -v $PKG/etc/init.d/iptables{,.new}
}
