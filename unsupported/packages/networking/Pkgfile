# Description: network setup scripts
# Depends on:  iproute2 dhcpcd wpa_supplicant

name=networking
version=0.1
release=mix-1
source=(net.ip.dhcp wifi.ip.wpa.dhcp iptables.pers-firewall)

build() {
  mkdir -pv $PKG/etc/rc.d
  install -m 755 -D net.ip.dhcp $PKG/etc/rc.d/net.new
  install -m 755 -D wifi.ip.wpa.dhcp $PKG/etc/rc.d/wifi.new
  install -m 755 -D iptables.pers-firewall $PKG/etc/rc.d/iptables.new
}
