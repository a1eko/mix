# Description: superuser command execution

name=sudo
version=1.8.11p2
release=mix-1
source=(ftp://ftp.sudo.ws/pub/sudo/sudo-$version.tar.gz sudoers)

build() {
  cd $name-$version
  ./configure --prefix=/usr \
    --libexecdir=/usr/lib --with-all-insults --without-pam
  make
  make DESTDIR=$PKG install
  install -v -m 0440 ../sudoers $PKG/etc/
  rm -rv $PKG/usr/share/doc

  mv -v $PKG/etc/sudoers{,.new}
}
